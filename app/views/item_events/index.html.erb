<h1>Listing item_events</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Event type</th>
    <th>Agent</th>
    <th>Role</th>
    <th>Location</th>
    <th>Item event start date</th>
    <th>Item event end date</th>
    <th>Item event notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @item_events.each do |item_event| %>
  <tr>
    <td><%= item_event.item.item_siglum %></td>
    <td><%= item_event.event_type.event_type_type %></td>
    <td><%= item_event.agent.agent_name_prefix %> <%= item_event.agent.agent_first_name %> <%= item_event.agent.agent_middle_name %> <%= item_event.agent.agent_last_name %> <%= item_event.agent.agent_name_suffix %></td>
    <td><%= item_event.role.role_role %></td>
    <td><%= item_event.location.location_name %></td>
    <td><%= item_event.item_event_start_date %></td>
    <td><%= item_event.item_event_end_date %></td>
    <td><%= item_event.item_event_notes %></td>
    <td><%= link_to 'Show', item_event %></td>
    <td><%= link_to 'Edit', edit_item_event_path(item_event) %></td>
    <td><%= link_to 'Destroy', item_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

