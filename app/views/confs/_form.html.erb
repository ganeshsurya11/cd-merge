<%= form_for(@conf) do |f| %>
  <% if @conf.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conf.errors.count, "error") %> prohibited this conf from being saved:</h2>

      <ul>
      <% @conf.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <b>Site Name</b><br />
      <%= f.text_field :conf_site_name %>
    </div>

    <div class="field">
      <b>Tagline</b><br />
      <%= f.text_field :conf_site_tagline %>
    </div>

    <div class="field">
      <b>Editor Name</b><br />
      <%= f.text_field :conf_site_editor_name %>
    </div>

    <div class="field">
      <b>Contact email</b><br />
      <%= f.text_field :conf_contact_email %>
    </div>

    <div class="field">
      <b>Site Domain Name</b><br />
      <%= f.text_field :conf_site_domain_name %>
    </div>

    <div class="field">
      <b>Site Publisher</b><br />
      <%= f.text_field :conf_publisher %>
    </div>

    <div class="field">
      <b>Publisher URL:</b><br />
      <%= f.text_field :conf_publisher_url %>
    </div>

    <div class="field">
      <b>Splash Page Content</b><br />
      <%= f.text_area :conf_splash, size: "80x20" %>
    </div>

    <div class="field">
      <b>Site Publication License:</b><br />
      <%= f.text_area :conf_publisher_license, size: "40x20" %>
    </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
