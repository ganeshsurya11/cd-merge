<h1>Listing locations</h1>

<table>
  <tr>
    <th>Location name</th>
    <th>Location latitude</th>
    <th>Location longitude</th>
    <th>Location ghetty name</th>
    <th>Location ghetty</th>
    <th>Location notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.location_name %></td>
    <td><%= location.location_latitude %></td>
    <td><%= location.location_longitude %></td>
    <td><%= location.location_ghetty_name %></td>
    <td><%= location.location_ghetty_id %></td>
    <td><%= location.location_notes %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

