<h1>Listing pages</h1>

<table>
  <tr>
    <th>Digital Edition ID</th>
    <th>Page page</th>
    <th>Page image</th>
    <th>Page notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td>
      <% if page.digital_edition_id %>
        <%= page.digital_edition_id %>
      <% end %>
    </td>
    <td>
      <% if page.page_page %>
        <%= page.page_page %>
      <% end %>
    </td>
    <td>
      <%= image_tag page.page_image_url(:thumb).to_s %>
    </td>
    <td>
      <% if page.page_notes %>
        <%= page.page_notes %>
      <% end %>
    </td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

