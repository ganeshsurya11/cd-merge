<h1>Listing transcriptions</h1>

<table>
  <tr>
    <th>Surrogate ID</th>
    <th>Surrogate Name</th>
    <th>Page ID</th>
    <th>Page Number</th>
    <th>Entity ID</th>
    <th>Entity Name</th>
    <th>Transcription order</th>
    <th>Transcription file</th>
    <th>Transcription text</th>
    <th>Transcription tei</th>
    <th>Transcription notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transcriptions.each do |transcription| %>
  <tr>
    <td><%= transcription.surrogate_id %></td>
    <td><%= transcription.page.surrogate.surrogate_local_title %></td>
    <td><%= transcription.page_id %></td>
    <td><%= transcription.page.page_page %></td>
    <td><%= transcription.entity_id %></td>
    <td><%= transcription.entity.entity_name %></td>
    <td><%= transcription.transcription_order %></td>
    <td><%= transcription.transcription_file %></td>
    <td><%= transcription.transcription_text %></td>
    <td><%= transcription.transcription_tei %></td>
    <td><%= transcription.transcription_notes %></td>
    <td><%= link_to 'Show', transcription %></td>
    <td><%= link_to 'Edit', edit_transcription_path(transcription) %></td>
    <td><%= link_to 'Destroy', transcription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

