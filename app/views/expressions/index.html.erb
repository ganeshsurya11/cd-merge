<% content_for :head_breadcrumb do %>
    <li><a href="/admin">Admin Interface</a></li>
    <li><a href="#">Expressions</a></li>
<% end %>

<h1>Listing expressions</h1>

<table>
  <tr>
  	<th>Work ID</th>
  	<th>Work Name</th>
    <th>Expression type</th>
    <th>Expression type Name</th>
    <th>Expression name</th>
    <th>Expression siglum</th>
    <th>Expression description</th>
    <th>Expression notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @expressions.each do |expression| %>
  <tr>
  	<td><%= expression.work_id %></td>
  	<td><%= expression.work.work_name %></td>
    <td><%= expression.expression_type_id %></td>
    <td><%= expression.expression_type.expression_type_type %></td>
    <td><%= expression.expression_name %></td>
    <td><%= expression.expression_siglum %></td>
    <td><%= expression.expression_description %></td>
    <td><%= expression.expression_notes %></td>
    <td><%= link_to 'Show', expression %></td>
    <td><%= link_to 'Edit', edit_expression_path(expression) %></td>
    <td><%= link_to 'Destroy', expression, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Expression', new_expression_path %>

<% content_for :foot_logout do %>
    <div class="content_right_align">
      <%= link_to "Logout", '/sessions/destroy' %>
    </div>
<% end %>
