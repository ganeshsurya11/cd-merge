<%= form_for(@expression) do |f| %>
  <% if @expression.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expression.errors.count, "error") %> prohibited this expression from being saved:</h2>

      <ul>
      <% @expression.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Parent Work", :class => "form_field_label" %><br />
    <%= f.select :work_id, @woks_collection_master, :selected => @parent_id %>
  </div> 

  <div class="field">
    <%= f.label :expression_type_id, :class => "form_field_label" %><br />
    <%= f.collection_select(:expression_type_id, ExpressionType.all, :id, :expression_type_type) %>
  </div>  
  
  
  <table class="form_column_table"><tr class="form_column_table_tr"><td class="form_column_table_left_cell">
  
	  <div class="field">
		<%= f.label "Name", :class => "form_field_label" %><br />
		<%= f.text_field :expression_name, :class => "form_field_field", :size => 50 %>
	  </div>
	  <div class="field">
		<%= f.label "Siglum", :class => "form_field_label" %><br />
		<%= f.text_field :expression_siglum, :class => "form_field_field", :size => 5 %>
	  </div>
	  <div class="field">
		<%= f.label "Description", :class => "form_field_label" %><br />
		<%= f.text_field :expression_description, :class => "form_field_field", :size => 50 %>
	  </div>
  
  </td>
  <td class="form_column_table_right_cell">
  
	  <div class="field">
		<%= f.label "Production Notes (not public):", :class => "form_field_label" %><br />
		<%= f.text_area :expression_notes, :class => "form_field_field", :cols => 55, :rows => 12 %>
	  </div>
  
  </td>
  </tr></table>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
