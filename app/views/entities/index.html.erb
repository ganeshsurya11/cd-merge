<h1>Listing entities</h1>

<table>
  <tr>
    <th>Entity name</th>
    <th>Entity siglum</th>
    <th>Entity viaf work</th>
    <th>Entity viaf work link</th>
    <th>Entity standard title</th>
    <th>Entity standard title source</th>
    <th>Entity notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entities.each do |entity| %>
  <tr>
    <td><%= entity.entity_name %></td>
    <td><%= entity.entity_siglum %></td>
    <td><%= entity.entity_viaf_work_id %></td>
    <td><%= entity.entity_viaf_work_link %></td>
    <td><%= entity.entity_standard_title %></td>
    <td><%= entity.entity_standard_title_source %></td>
    <td><%= entity.entity_notes %></td>
    <td><%= link_to 'Show', entity %></td>
    <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
    <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
