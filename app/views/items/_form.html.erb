<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  
	<div class="row">
		<div class="col gu2_half_left_equal_no_margin">
			<div class="generic_chunk">

				  <div class="field">
					<%= f.label :manifestation_id %><br />
					<%= f.select :manifestation_id, @manifestation_collection_master, :selected => @parent_id %>
				  </div> 
			  
			  	  <table class="form_column_table"><tr class="form_column_table_tr"><td class="form_column_table_left_cell_two">
			  
					  <div class="field">
						<%= f.label :holding_institution_id %><br />
						<%= f.select :holding_institution_id, @holding_i_collection_master, {}, { :class => 'item_holding_select' } %>
					  </div> 
				
				  </td>
  				  <td class="form_column_table_right_cell_two">
  						<span class="blue_link_no_underline"><a href="/holding_institutions/<% if @item.id.nil? %>0<% else %><%= @item.id %><% end %>/index">[manage holding institutions]</a></span>
				  </td>
				  </tr></table>
  
				  <div class="field">
					<%= f.label :item_shelfmark %><br />
					<%= f.text_field :item_shelfmark, :size => "10" %>
				  </div> 
  
				  <div class="field">
					<%= f.label :item_siglum %><br />
					<%= f.text_field :item_siglum, :size => "8" %>
				  </div>
				  
				  <div class="field">
					<%= f.label :item_description %><br />
					<%= f.text_field :item_description, :size => "60" %>
				  </div>




			</div>
			
		</div>
		
		
		<div class="col gu2_half_right_equal">
			<div class="generic_chunk">


			  <div class="field">
				<%= f.label "Production Notes (non public)" %><br />
				<%= f.text_area :item_notes, :cols => "45", :rows => "12" %>
			  </div>


			</div>
		</div>
	</div>  
  
 
  <div class="actions">
    <%= f.submit %>
  </div>
   
<% end %>
